export PS1="\w$ "
export EDITOR="mate -w"


RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
GREEN="\[\033[0;32m\]"
NO_COLOUR="\[\033[0m\]"

function parse_git_branch () {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

function git_branch_color () {
  ss=$(git status --porcelain | wc -l)
  if [ $ss = "0" ]
  then echo $YELLOW
  else echo $RED
  fi
}


PS1="$GREEN\u@\h$NO_COLOUR:\w$(git_branch_color)\$(parse_git_branch)$NO_COLOUR\$ "